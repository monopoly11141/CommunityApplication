<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.TipFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="70dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/main_icon_all"
                        android:id="@+id/imgAll"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/main_icon_cook"
                        android:layout_weight="1"
                        android:id="@+id/imgCook"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/main_icon_economy"
                        android:layout_weight="1"
                        android:id="@+id/imgEconomy"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="All"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="Cook"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="Economy"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/main_icon_hobby"
                        android:layout_weight="1"
                        android:id="@+id/imgHobby"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/main_icon_interior"
                        android:layout_weight="1"
                        android:id="@+id/imgInterior"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/main_icon_life"
                        android:layout_weight="1"
                        android:id="@+id/imgLife"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="Hobby"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="Interior"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="Life"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="125dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/main_icon_oneroom"
                        android:layout_weight="1"
                        android:id="@+id/imgOneRoom"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/main_icon_else"
                        android:layout_weight="1"
                        android:id="@+id/imgElse"/>

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="One Room"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="Else"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"/>

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:text="economy"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:visibility="invisible"/>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imgBottomHometap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_hometap" />

                <ImageView
                    android:id="@+id/imgBottomGoodtip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_goodtip" />

                <ImageView
                    android:id="@+id/imgBottomTalk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_talk" />

                <ImageView
                    android:id="@+id/imgBottomBookmark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_bookmark" />

                <ImageView
                    android:id="@+id/imgBottomStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/bottom_store" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>